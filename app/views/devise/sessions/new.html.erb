<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 mx-auto">
      <h2 class="centralizar">Iniciar Sess√£o</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: 'Senha',
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: 'Lembrar de mim', as: :boolean if devise_mapping.rememberable? %>
    </div>
      <div class="form-actions">
        <%= f.button :submit, "Entrar", class: 'btn btn-primary full-large' %>
      </div>
  <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'senha' %><br />
    <% end %>
    </div>
  </div>
</div>
